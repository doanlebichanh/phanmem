{
  "name": "freight-management-system",
  "version": "1.0.1",
  "description": "Hệ thống quản lý vận chuyển hàng hóa",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "electron": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir"
  },
  "keywords": [
    "freight",
    "logistics",
    "transport"
  ],
  "author": "Ngọc Anh Transport",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ngocanh.freight",
    "productName": "FreightManager",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Freight Manager"
    },
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
